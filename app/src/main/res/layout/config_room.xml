<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40dp"
        android:background="@color/material_blue_grey_800"
        android:textColor="#ffffffff"
        android:text="asdf"
        android:id="@+id/name_floor"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"/>
    <TextView
        android:layout_below="@+id/name_floor"
        android:id="@+id/txt"
        android:paddingTop="30dp"
        android:text="Config Room"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:layout_below="@+id/txt"
        android:id="@+id/openOrClose"
        android:text="Close Room Type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/roomName"
        android:layout_below="@+id/openOrClose"
        android:hint="Room Name"
        android:paddingTop="10dp"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/floorHeight"
        android:hint="Height of floor"
        android:layout_below="@+id/roomName"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/width"
        android:layout_below="@+id/floorHeight"
        android:hint="Width"
        android:paddingTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/height"
        android:layout_below="@+id/floorHeight"
        android:hint="Height"
        android:layout_toRightOf="@+id/width"
        android:paddingTop="10dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/floorHeight"
        android:text="Dimension (Width x Long)"
        android:textSize="15dp"
        android:paddingTop="10dp"
        android:layout_toRightOf="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/range"
        android:layout_below="@+id/width"
        android:paddingTop="10dp"
        android:hint="Range between devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/next"
        android:layout_above="@+id/back"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>